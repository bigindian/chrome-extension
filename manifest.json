{
  "manifest_version": 2,
  "name": "The Big Indian News",
  "description": "A share button for quickly submitting links to the thebigindian.news",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "tabs",
    "https://thebigindian.news/"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "images/favicon-16.png",
    "default_title": "Share this page"
  },
  // "chrome_url_overrides" : {
  //   "newtab" : "index.html"
  // },
  "icons" : {
    "16" : "images/favicon-16.png",
    "48" : "images/favicon-57.png",
    "128" : "images/favicon-144.png"
  }
}